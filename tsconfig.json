{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2019",
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noEmit": true
  },
  "include": [
    "packages/form-js-viewer/src",
    "packages/form-js-editor/src",
    "packages/form-js/src",
    "packages/form-js/test/spec",
    "packages/form-js-integration/src"
  ],
  "exclude": [
    "node_modules"
  ]
}
