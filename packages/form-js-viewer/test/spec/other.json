{
  "components": [
    {
      "type": "text",
      "text": "# File an Invoice\n\nAdd your invoice details below."
    },
    {
      "key": "creditor",
      "label": "Creditor",
      "type": "textfield",
      "validate": {
        "required": true
      }
    },
    {
      "description": "An invoice number in the format: C-123.",
      "key": "invoiceNumber",
      "label": "Invoice Number",
      "type": "textfield",
      "validate": {
        "pattern": "^C-[0-9]+$"
      }
    },
    {
      "key": "submit",
      "label": "Submit",
      "type": "button"
    }
  ],
  "type": "default"
}