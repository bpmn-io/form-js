{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "const": "checkbox"
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "properties": {
          "defaultValue": {
            "type": "boolean"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "textfield",
              "textarea",
              "datetime",
              "radio",
              "select"
            ]
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "properties": {
          "defaultValue": {
            "type": "string"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "number"
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "properties": {
          "defaultValue": {
            "type": [
              "number",
              "string"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "checklist",
              "taglist"
            ]
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "properties": {
          "defaultValue": {
            "type": "array"
          }
        }
      }
    }
  ]
}