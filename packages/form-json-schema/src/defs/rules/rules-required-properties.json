{
  "$schema": "http://json-schema.org/draft-07/schema",
  "allOf": [
    {
      "if": {
        "anyOf": [
          {
            "$ref": "../field-types/inputs.json"
          },
          {
            "$ref": "../field-types/presentation-components.json"
          }
        ]
      },
      "then": {
        "required": [
          "key"
        ]
      }
    },
    {
      "if": {
        "$ref": "../field-types/presentation-components.json"
      },
      "then": {
        "oneOf": [
          {
            "required": [
              "dataSource",
              "columns"
            ]
          },
          {
            "required": [
              "dataSource",
              "columnsExpression"
            ]
          }
        ]
      }
    }
  ]
}
