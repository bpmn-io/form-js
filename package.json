{
  "name": "form-js",
  "scripts": {
    "all": "run-s lint build lint:types test test:distro",
    "build-distro": "lerna run prepublishOnly --sort",
    "clean": "del-cli \"{node_modules,dist}\" \"packages/*/{node_modules,dist}\"",
    "distro": "run-s clean reinstall build-distro",
    "dev": "run-s build \"lerna-dev -- {@}\" -- ",
    "dev:viewer": "npm run dev -- @bpmn-io/form-js-viewer",
    "dev:editor": "npm run dev -- @bpmn-io/form-js-editor",
    "lerna-dev": "lerna run dev --stream --scope",
    "build": "lerna run build --sort --stream",
    "lerna-publish": "lerna publish -m \"chore(project): publish %s\"",
    "lint": "eslint packages",
    "lint:types": "tsc --noEmit --pretty",
    "postinstall": "lerna bootstrap --hoist",
    "reinstall": "npm ci",
    "release": "run-s distro test \"lerna-publish -- {@}\" --",
    "test": "lerna run test",
    "test:distro": "lerna run test:distro",
    "ci": "run-s all build-distro",
    "start": "cross-env SINGLE_START=basic npm run dev --",
    "start:viewer": "npm run start -- @bpmn-io/form-js-viewer",
    "start:editor": "npm run start -- @bpmn-io/form-js-editor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bpmn-io/form-js.git"
  },
  "keywords": [
    "bpmn-io",
    "form",
    "forms",
    "form-js"
  ],
  "contributors": [
    {
      "name": "bpmn.io contributors",
      "url": "https://github.com/bpmn-io"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.17",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@testing-library/preact": "^2.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.0",
    "cross-env": "^7.0.3",
    "del-cli": "^3.0.1",
    "eslint": "^7.19.0",
    "eslint-plugin-bpmn-io": "^0.12.0",
    "eslint-plugin-import": "^2.22.1",
    "karma": "^6.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-debug-launcher": "0.0.4",
    "karma-env-preprocessor": "^0.1.1",
    "karma-mocha": "^2.0.1",
    "karma-sinon-chai": "^2.0.2",
    "karma-webpack": "^5.0.0",
    "lerna": "^3.22.1",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.12",
    "puppeteer": "^1.20.0",
    "raw-loader": "^4.0.2",
    "react-svg-loader": "^3.0.3",
    "rollup": "^2.38.3",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-react-svg": "^3.0.3",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "typescript": "^4.1.3",
    "webpack": "^5.21.2"
  }
}
